classdef max_pool < handle
    %MAX_POOL Summary of this class goes here
    %   Detailed explanation goes here
    
    properties
        siz;
        out_size;
    end
    
    methods
        function obj = max_pool(siz, out_size)
           obj.out_size = out_size;
           obj.siz = siz;
        end
        
        function data_f = forward(obj, data)
            data_f = zeros(size(data,1)/2, size(data,2)/2, size(data,3));
            for i=1:size(data_f,1)
                for j=1:size(data_f,2)
                    for f=1:size(data_f,3)
                        data_f(i,j,k) = data(i*2,j*2,k);
                    end
                end
            end
        end

    end
    
end

