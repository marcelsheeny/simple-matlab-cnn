classdef softmax < handle
    %RELU Summary of this class goes here
    %   Detailed explanation goes here
    
    properties
        in_size;
        out_size;
    end
    
    methods
        function obj = softmax(in_size)
            obj.in_size = in_size;
            obj.out_size = in_size;
        end
        
        function data_f = forward(obj, data)
            data = data(:);
            amax = max(data);
            esum = 0;
            es = zeros(length(data),1);
            for i=1:length(data)
                es(i) = exp(data(i) - amax);
                esum = esum + es(i);
            end
            data_f = es/esum;
        end
        
        function obj = backward(

    end
    
end

